header.teal.darken-1.z-depth-1
  div.container
    h1.white-text = @book.name

main
  h2.container.teal-text
    a.teal-text href="#{edit_book_paper_path(@book, @paper)}"
      = @paper.title

  div.container.right-align
    a.btn-flat.teal-text href="#{new_book_paper_path(@book)}" Turn Over The Pageâ†’

  div#notice.container.center-align.green-text = notice

  = render 'items/index'

  section.container
    h3.teal-text Add
    div.right-align
      a.btn-flat.teal-text href="#{book_select_recent_items_path(@book)}" Copy Items From Recent Papers...
    = render partial: 'items/form', locals: { item: @new_item }

  section.container
    h3.teal-text Shopping

    a.btn.waves-effect href="#{shopping_book_paper_path(@book, @paper)}" wafes-light Go to Shopping Mode

  section.container
    h3.teal-text Manage

    h4.teal-text URL
    div Don't forget this URL!
    div.grey.lighten-4.teal-text.c-url.js-paper-url = book_url @book

    h4.teal-text Paper
    ul
      li
        a href="#{edit_book_paper_path(@book, @paper)}" Edit This Paper
      li
        a href="#{new_book_paper_path(@book)}" Create New Paper

    h4.teal-text History
    ul
      - @papers.each do |paper|
        li
          a href="#{book_paper_path(@book, paper)}" = paper.title
