<%= form_for(item, remote: true) do |f| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, placeholder: 'Milk' %>
  </div>

  <div class="field">
    <%= f.label :quantity %><br>
    <%= f.text_field :quantity, placeholder: '4L' %>
  </div>

  <div class="field">
    <%= f.label :orderer %><br>
    <%= f.text_field :orderer, placeholder: 'Senna' %>
  </div>

  <div class="actions">
    <%= f.hidden_field :paper_id %>
    <%= button_tag(type: 'submit', class: "btn waves-effect waves-light") do %>
      Create Item
    <% end %>
    <%= f.button 'Cancel', type: :button, class: 'btn waves-effect waves-light js-hideEditItemForm' if item.id %>
  </div>
<% end %>
