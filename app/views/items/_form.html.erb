<%= form_for item, remote: true, html: { class: "js-itemForm #{if item.id then 'js-itemForm-edit' else 'js-itemForm-new' end}" } do |f| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'js-continuable', placeholder: 'Milk' %>
  </div>

  <div class="field">
    <%= f.label :quantity %><br>
    <%= f.text_field :quantity, class: 'js-continuable', placeholder: '4L' %>
  </div>

  <div class="field">
    <%= f.label :orderer %><br>
    <%= f.text_field :orderer, placeholder: 'Senna' %>
  </div>

  <div class="actions">
    <%= f.hidden_field :paper_id %>
    <%= f.button type: 'submit', class: "btn waves-effect waves-light" do %>
      <%= if item.id then 'Update Item' else 'Create Item' end %>
    <% end %>
    <%= f.button 'Cancel', type: :button, class: 'btn waves-effect waves-light js-closeEditItemForm' if item.id %>
  </div>
<% end %>

<% if item.id %>
  <%= form_for item, method: :delete, remote: true, html: { id: nil, class: 'item-deleteForm right-align' } do |f| %>
    <%= f.button 'Destroy', class: 'btn-flat red-text waves-effect waves-light', type: 'submit' %>
  <% end %>
<% end %>
