doctype html
html
  head
    title
      - if @title
        = "#{@title} - Salt and Vinegar"
      - else
        | Salt and Vinegar
    meta name="viewport" content="width=320px"
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  body
    header.app-header
      div.app-header-title
        a href="#{root_path}"
          img.app-header-logo src="/logo-on-the-bottle.png" alt=""
        - if @book and @book.id.present?
          a href="#{book_path(@book)}" = @book.name
        - else
          a href="#{root_path}" Salt and Vinegar

    main.app-main
      = yield

    footer.app-footer
      nav.app-footer-nav
        a href="#{ root_path }" Home
        a href="#{ book_path('example') }" Example
      div.app-footer-copyright
        small System designed by Ginpei. Logo designed by Q.
